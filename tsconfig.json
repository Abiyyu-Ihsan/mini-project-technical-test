{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "paths": {
      "@styles/*": [
        "./styles/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@icons/*": [
        "./components/icons/*"
      ],
      "@layouts/*": [
        "./components/layouts/*"
      ],
      "@screens/*": [
        "./components/screens/*"
      ],
      "@widgets/*": [
        "./components/widgets/*"
      ],
        "@shadcn/*": [
        "./shadcn/*"
      ],
      "@libs/*": [
        "./libs/*"
      ],
      "@data/*": [
        "./libs/data/*"
      ],
      "@hooks/*": [
        "./libs/hooks/*"
      ],
      "@services/*": [
        "./libs/services/*"
      ],
      "@types/*": [
        "./libs/types/*"
      ],
      "@utils/*": [
        "./libs/utils/*"
      ],
      "@validations/*": [
        "./libs/validations/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
